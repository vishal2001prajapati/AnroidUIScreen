<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.anroiduiscreen">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:launchMode="singleInstance"
        android:noHistory="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AnroidUIScreen">
        <activity
            android:name=".homescreen.HomeScreenActivity"
            android:exported="false" />
        <activity
            android:name=".signupscreen.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".signinscreen.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".onboardscreen.OnBoardScreenActivity"
            android:exported="false" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
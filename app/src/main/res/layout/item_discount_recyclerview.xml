<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/coverImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/superHot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burger" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/promoImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginTop="-5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/coverImage"
        app:srcCompat="@drawable/ic_promo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/superHot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/intersemibold"
        android:text="@string/super_hot"
        android:textColor="@color/appleColor"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintBottom_toTopOf="@id/subSpecification"
        app:layout_constraintStart_toStartOf="@id/coverImage"
        app:layout_constraintTop_toBottomOf="@id/coverImage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/subSpecification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/intermedium"
        android:text="@string/meat_with_sauce"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintBottom_toTopOf="@id/rate"
        app:layout_constraintStart_toStartOf="@id/superHot"
        app:layout_constraintTop_toBottomOf="@id/superHot" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintStart_toStartOf="@+id/subSpecification"
        app:layout_constraintTop_toBottomOf="@+id/subSpecification"
        app:srcCompat="@drawable/ic_star" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/digitRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:fontFamily="@font/intersemibold"
        android:text="@string/_4_5"
        android:textColor="@color/appleColor"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="@id/rate"
        app:layout_constraintStart_toEndOf="@+id/rate"
        app:layout_constraintTop_toTopOf="@id/rate" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/rateCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:fontFamily="@font/intermedium"
        android:text="@string/_100"
        android:textColor="@color/textViewColor"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="@id/digitRate"
        app:layout_constraintStart_toEndOf="@+id/digitRate"
        app:layout_constraintTop_toTopOf="@id/digitRate" />

</androidx.constraintlayout.widget.ConstraintLayout>